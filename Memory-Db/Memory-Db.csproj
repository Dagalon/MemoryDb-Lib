<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <PackageId>Memory.Db</PackageId>
        <Version>1.0.0</Version>
        <Authors>Dagalon</Authors>
        <Description>
            A collection of helper libraries that make it simple to spin up disposable,
            in-memory database engines for local development, automated tests, and prototypes.
        </Description>

        <RepositoryUrl>https://github.com/Dagalon/MemoryDb-Lib</RepositoryUrl>
        <RepositoryType>git</RepositoryType>

        <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
        <IsPackable>true</IsPackable>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\LiteDb-Memory-Lib\LiteDb-Memory-Lib.csproj" />
        <ProjectReference Include="..\SqliteDB-Memory-Lib\SqliteDB-Memory-Lib.csproj" />
    </ItemGroup>

</Project>
